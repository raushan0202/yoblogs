

<% include ./partials/header %>



<div class="container">
    <div class="row">
        
        
        <div class="loginAndSignupForms">
            <h4 style="text-align : center; "> <%= msg %></h4>
            <h1 style="text-align : center; "> Sign Up to <span id="brand">YoBlogs</span> </h1>
              
              <form action="/register" method="POST">
                    
                <div class="form-group">
                   <input class="form-control" type="email" name="email" placeholder="Enter email" required>
                </div>

                <div class="form-group">
                   <input class="form-control" type="text" name="username" placeholder="Enter username" required>
                </div>
                
                <div class="form-group">
                   <input class="form-control" type="password" name="password" placeholder="Enter password" minlength="8" maxlenght="50" required>
                 </div>
                
                 <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block" >Sign Up</button>
                 </div>
              </form>
              
        </div>
     </div>
  </div>



<% include ./partials/footer%>

